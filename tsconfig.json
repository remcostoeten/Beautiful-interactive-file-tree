{
	"compilerOptions": {
		"jsx": "preserve",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"types": [
			"react",
			"react-dom"
		],
		"moduleResolution": "bundler",
		"allowJs": true,
		"skipLibCheck": true,
		"target": "ES2017",
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"./src/types/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
